@model TestMe.Models.TestAnswer

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>TestAnswer</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.AnswerText)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.AnswerText)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.IsCorrect)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.IsCorrect)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.TestQuestion)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.TestQuestion.QuestionText)
        </dd>
        @if(!(Model.ImageName is null))
        {
            <dt>
                @Html.DisplayNameFor(model => model.ImageName)
            </dt>
            <dd>
                   <input type="image" src="~/uploads/answerPics/@Model.ImageName" height="200" />
                </dd>
            }
        </dl>
    </div>
    <div>
        @if (Model.TestQuestion.Test.TestCode is null)
        {
            <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a><span> |</span>
        }
<a asp-action="Index" asp-route-id="@Model.TestQuestionId">Back to answers</a>
</div>
