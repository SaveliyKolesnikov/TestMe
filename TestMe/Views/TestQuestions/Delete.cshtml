@model TestMe.Models.TestQuestion

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>TestQuestion</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.QuestionText)
        </dt>
        <dd>
            @if (Model.IsCode)
            {
                <pre>@Html.DisplayFor(model => model.QuestionText)</pre>
            }
            else
            {
                @Html.DisplayFor(model => model.QuestionText)
            }
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.IsCode)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.IsCode)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Test)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Test.TestName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-default" /> |
        <a asp-action="Index" asp-route-id="@Model.TestId">Back to questions</a>
    </form>
</div>
